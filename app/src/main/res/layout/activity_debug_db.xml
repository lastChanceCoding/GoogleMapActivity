<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".DebugDBActivity">

<TextView
    android:layout_width="467dp"
    android:layout_height="25dp"
    android:textSize="18sp"
    android:text="Debug Screen:  Location Database" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="ID" />

<EditText
    android:id="@+id/etID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:textSize="18sp"
    android:text="" />


<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Location Name (optional)" />

<EditText
    android:id="@+id/etlocationName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:textSize="18sp"
    android:inputType="textPersonName"
    android:text="" />


<TextView
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Latitude" />

<EditText
    android:id="@+id/etlatitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:textSize="18sp"
    android:text="" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Longitude" />

<EditText
    android:id="@+id/etlongitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:textSize="18sp"
    android:text="" />


<Button
    android:id="@+id/btn_insert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Insert" />

<Button
    android:id="@+id/btn_ViewRecent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Recent" />

<Button
    android:id="@+id/btn_View"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View All" />

<Button
    android:id="@+id/btn_Update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Update" />

<Button
    android:id="@+id/btn_Last"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Last Location" />



</LinearLayout>